


<h1><%= @post.title %><h2>


<%= image_tag @post.image.url(:medium)%>

<p>
<%= link_to "Like", post_likes_path(@post), class: 'post-like' %>
<span class="like_count"><%= @post.likes.count %></span> likes

</p>




<a href="#" class="comment-form">Comment</a>

<section class="comments">
<%= form_for [@post, Comment.new] do |f| %>
  <%= f.label :comment %>
  <%= f.text_area :comment, class: "comment" %>
  <%= f.submit 'Post Comment', class: "post-comment" %>
<% end %>
</section>

<ul>
    <% @post.comments.each do |comment| %>
      <li><%= comment.comment %></li>
    <% end %>
  </ul>
